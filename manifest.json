{
  "name": "Send to OmniFocus",
  "version": "2.0.0",
  "manifest_version": 2,
  "icons": {
    "16": "icon16.png",
    "128": "icon128.png"
  },
  "description": "A toolbar button to send the current page to the OmniFocus inbox.",
  "browser_action": {
    "default_icon": "browser_action.png",
    "default_title": "Send this page to the OmniFocus inbox"
  },
  "background": {
    "scripts" : ["options.js", "background.js"],
    "persistent": false
  },
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "permissions": [
    "storage",
    "tabs", "http://*/*",
    "tabs", "https://*/*"
  ]
}
